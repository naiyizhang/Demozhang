<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:id="@+id/lucky"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<Space
    android:id="@+id/center_tag"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text1"
        app:layout_constraintCircle="@+id/center_tag"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="75dp"
        android:rotation="30"
        android:text="text1"
        android:gravity="center"
        android:background="#33FF0000"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/text2"
        app:layout_constraintCircle="@+id/center_tag"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="75dp"
        android:rotation="90"
        android:text="text2"
        android:background="#33AC8A8A"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/text3"
        app:layout_constraintCircle="@+id/center_tag"
        app:layout_constraintCircleAngle="150"
        app:layout_constraintCircleRadius="75dp"
        android:rotation="150"
        android:text="text3"
        android:background="#5890BD"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/text4"
        app:layout_constraintCircle="@+id/center_tag"
        app:layout_constraintCircleAngle="210"
        app:layout_constraintCircleRadius="75dp"
        android:rotation="210"
        android:text="text2"
        android:background="#CFDA68"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/text5"
        app:layout_constraintCircle="@+id/center_tag"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="75dp"
        android:rotation="270"
        android:text="text5"
        android:background="#4CAF50"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/text6"
        app:layout_constraintCircle="@+id/center_tag"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="75dp"
        android:rotation="330"
        android:text="text6"
        android:background="#8F6253"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>